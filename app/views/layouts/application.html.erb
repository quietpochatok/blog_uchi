<!DOCTYPE html>
<html>
  <head>
    <title>BlogUchi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="wrapper">
  <div class="content">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <%= link_to 'Times', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Профиль', current_user, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <div class="container-fluid">
       <!--  -->
        <div style="height: 100%;">
          <%= yield %>
        </div>
      </div>
    </div><!--</div> --> <!-- /container -->
  </div>
  <div class="footer bg-light text-center text-lg-start">
    <footer class="bg-light text-center text-lg-start" >
      <!-- Copyright -->
      <div class="text-center p-1" style="background-color: rgba(0, 0, 0, 0.2)">
        <ul class="pt-3">
          <li style="list-style-type: none;">
            <a class="text-dark" style="text-decoration:none;" href=https://github.com/quietpochatok>Khasanov Damir &copy;<%= Time.now.year %></a>
          </li>
        </ul>
      </div>
      <!-- Copyright -->
    </footer>
  </div>
</div>
  </body>
</html>
